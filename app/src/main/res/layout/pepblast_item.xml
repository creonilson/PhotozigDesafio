<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardPreventCornerOverlap="false"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/img_filme"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/bluelines"
        android:contentDescription="@string/description_imagem_blue_of_line" />

    <ProgressBar
        android:id="@+id/progress_imagem_fundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:alpha="0.5"
        android:background="@android:color/white"
        android:layout_gravity="top|center_horizontal"/>

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        tools:text="404 - Blue of line"
        android:textColor="@android:color/white"
        android:layout_gravity="top|center_horizontal"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/btn_baixar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            style="?android:attr/buttonBarStyle"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="@string/baixar"/>

        <Button
            android:id="@+id/btn_visualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.Button.Borderless.Small"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:text="@string/vizualizar"/>

    </LinearLayout>

</android.support.v7.widget.CardView>